<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/roundedBaseColorCornersOutlined">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level 1"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_marginVertical="10dp"
            android:fontFamily="@font/somatic_rounded"
            android:textColor="@color/thirdColor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COMPLETE!"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/somatic_rounded"
            android:textColor="@color/thirdColor"
        />

        <AbsoluteLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/star0"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_x="29dp"
                android:src="@drawable/star"
                android:tint="@color/accentColor"
            />

            <ImageView
                android:id="@+id/star0_outline"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_x="29dp"
                android:src="@drawable/star_outline"
                android:tint="@color/thirdColor"
            />

            <ImageView
                android:id="@+id/star1"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_x="79dp"
                android:src="@drawable/star"
                android:tint="@color/accentColor"
            />

            <ImageView
                android:id="@+id/star1_outline"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_x="79dp"
                android:src="@drawable/star_outline"
                android:tint="@color/thirdColor"
            />

            <ImageView
                android:id="@+id/star2"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_x="129dp"
                android:src="@drawable/star"
                android:tint="@color/accentColor"
            />

            <ImageView
                android:id="@+id/star2_outline"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_x="129dp"
                android:src="@drawable/star_outline"
                android:tint="@color/thirdColor"
            />
        </AbsoluteLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="19dp">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/undo"
                android:scaleType="centerCrop"
                android:tint="@color/iconColor"
                android:background="@android:color/transparent"
                android:layout_marginLeft="19dp"
            />

            <ImageButton
                android:id="@+id/restart"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/restart"
                android:scaleType="fitCenter"
                android:layout_marginHorizontal="19dp"
                android:tint="@color/iconColor"
                android:background="@android:color/transparent"
            />

            <ImageButton
                android:id="@+id/next"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/next"
                android:scaleType="fitCenter"
                android:tint="@color/iconColor"
                android:background="@android:color/transparent"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>