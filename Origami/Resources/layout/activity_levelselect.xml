<LinearLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:clipToPadding="false"
        android:paddingLeft="19dp"
        android:paddingRight="6dp"
        android:layout_width="89dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/back_button"
            android:elevation="@dimen/elevation"
            android:outlineAmbientShadowColor="@color/baseAmbientShadowColor"
            android:outlineSpotShadowColor="@color/basePointShadowColor"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="@drawable/roundedBottomCorners"
            android:backgroundTint="@color/baseColor"
            android:src="@drawable/back"
            android:scaleType="fitEnd"
            android:tint="@color/iconColor"
            android:paddingHorizontal="12dp"
            android:paddingBottom="15dp"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/somatic_rounded"
                android:text="Eagle - 2/16"
                android:textSize="18dp"
                android:background="@drawable/roundedCorners"
                android:backgroundTint="@color/baseColor"
                android:paddingVertical="4dp"
                android:paddingHorizontal="16dp"
                android:textColor="@color/textColor"/>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/levels_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />
    </LinearLayout>
</LinearLayout>