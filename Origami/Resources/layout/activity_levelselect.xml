<LinearLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:clipToPadding="false"
        android:paddingLeft="19dp"
        android:paddingRight="6dp"
        android:layout_width="89dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/back_button"
            android:elevation="@dimen/elevation"
            android:outlineAmbientShadowColor="@color/baseAmbientShadowColor"
            android:outlineSpotShadowColor="@color/basePointShadowColor"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="@drawable/roundedBottomCorners"
            android:backgroundTint="@color/baseColor"
            android:src="@drawable/back"
            android:scaleType="fitEnd"
            android:tint="@color/iconColor"
            android:paddingHorizontal="12dp"
            android:paddingBottom="15dp"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:gravity="center">
            
            <AbsoluteLayout
                android:layout_width="84dp"
                android:layout_height="22dp"
                android:layout_marginVertical="25dp"
                android:background="@drawable/roundedCorners"
                android:backgroundTint="@color/secondaryColor">

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/screen_selected0"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/roundedCorners"
                    android:backgroundTint="@color/baseColor"
                />

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/screen_selected1"
                    android:layout_x="31dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/transparent"
                    android:backgroundTint="@color/baseColor"
                />

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/screen_selected2"
                    android:layout_x="62dp"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:background="@drawable/transparent"
                    android:backgroundTint="@color/baseColor"
                />

                <LinearLayout
                    android:layout_x="5.5dp"
                    android:layout_y="5.5dp"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:background="@drawable/roundedCorners"
                    android:backgroundTint="@color/thirdColor"
                />

                <LinearLayout
                    android:layout_x="36.5dp"
                    android:layout_y="5.5dp"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:background="@drawable/roundedCorners"
                    android:backgroundTint="@color/thirdColor"
                />

                <LinearLayout
                    android:layout_x="67.5dp"
                    android:layout_y="5.5dp"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:background="@drawable/roundedCorners"
                    android:backgroundTint="@color/thirdColor"
                />
            </AbsoluteLayout>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:overScrollMode="never"
            android:clipToPadding="false"
            android:id="@+id/levels_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />
    </LinearLayout>
</LinearLayout>