
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill_horizontal"
    android:background="@color/backgroundColor"
    >

    <LinearLayout
        android:paddingLeft="19dp"
        android:layout_width="83dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:background="@drawable/roundedBottomCorners"
            android:backgroundTint="@color/baseColor"
            android:src="@drawable/back"
            android:scaleType="fitEnd"
            android:tint="@color/iconColor"
            android:paddingHorizontal="12dp"
            android:paddingBottom="15dp"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedtopcorners"
            android:backgroundTint="@color/baseColor"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SCORE"
                android:gravity="center"
                android:textSize="16dp"
                android:paddingTop="35dp"
                android:fontFamily="@font/somatic_rounded"
                android:textColor="@color/textColor"
            />

            <TextView
                android:id="@+id/score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="98%"
                android:gravity="center"
                android:textSize="16dp"
                android:paddingBottom="16dp"
                android:fontFamily="@font/somatic_rounded"
                android:textColor="@color/textColor"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FOLDS"
                android:gravity="center"
                android:textSize="16dp"
                android:fontFamily="@font/somatic_rounded"
                android:textColor="@color/textColor"
            />

            <TextView
                android:id="@+id/folds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:gravity="center"
                android:textSize="16dp"
                android:paddingBottom="16dp"
                android:fontFamily="@font/somatic_rounded"
                android:textColor="@color/textColor"
            />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LIMIT"
                android:gravity="center"
                android:textSize="16dp"
                android:fontFamily="@font/somatic_rounded"
                android:textColor="@color/textColor"
            />

            <TextView
                android:id="@+id/fold_limit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6"
                android:gravity="center"
                android:textSize="16dp"
                android:paddingBottom="20dp"
                android:fontFamily="@font/somatic_rounded"
                android:textColor="@color/textColor"
            />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/game_field_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/level_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="level 1 : beginning"
            android:gravity="center"
            android:fontFamily="@font/somatic_rounded"
            android:paddingVertical="3dp"
        />

        <ImageView
            android:id="@+id/game_field"
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/roundedLeftCorners"
            android:backgroundTint="@color/accentColor"
            android:layout_marginTop="19dp"
            android:paddingLeft="7dp"
            android:paddingVertical="7dp"
            android:paddingRight="19dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/help"
                android:tint="@color/iconColor"
            />

            <TextView
                android:id="@+id/help_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:paddingHorizontal="15dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/somatic_rounded"
                android:textColor="@color/textColor"
                android:textSize="25dp"
            />

            <ImageButton
                android:id="@+id/help"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/roundedCorners"
                android:backgroundTint="@color/secondaryColor"
                android:src="@drawable/ok"
                android:tint="@color/iconColor"
                android:scaleType="centerCrop"
                android:padding="2dp"
                android:layout_marginRight="11dp"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="19dp"
            android:paddingRight="19dp"
            android:gravity="right">

            <ImageButton
                android:id="@+id/restart"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/roundedCorners"
                android:backgroundTint="@color/baseColor"
                android:src="@drawable/restart"
                android:scaleType="centerCrop"
                android:padding="10dp"
                android:layout_marginBottom="30dp"
                android:tint="@color/iconColor"
            />

            <ImageButton
                android:id="@+id/undo"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/roundedCorners"
                android:backgroundTint="@color/baseColor"
                android:src="@drawable/undo"
                android:scaleType="centerCrop"
                android:padding="10dp"
                android:tint="@color/iconColor"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>