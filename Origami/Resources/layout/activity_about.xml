
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="@color/backgroundColor">

    <LinearLayout
        android:elevation="@dimen/elevation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/backgroundColor"
        android:paddingBottom="19dp">

        <Button
            android:id="@+id/dbgg"
            android:layout_width="500dp"
            android:layout_height="50dp"
            android:text="сделать все хорошо"/>

        <LinearLayout
            android:clipToPadding="false"
            android:paddingLeft="19dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"
            android:layout_width="91dp"
            android:layout_height="85dp"
            android:orientation="vertical">

            <ImageButton
                android:elevation="@dimen/elevation"
                android:outlineAmbientShadowColor="@color/baseAmbientShadowColor"
                android:outlineSpotShadowColor="@color/basePointShadowColor"
                android:id="@+id/back_button"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:background="@drawable/roundedBottomCorners"
                android:backgroundTint="@color/baseColor"
                android:src="@drawable/back"
                android:scaleType="fitEnd"
                android:tint="@color/iconColor"
                android:paddingHorizontal="12dp"
                android:paddingBottom="15dp"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="77dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="19dp">

            <TextView
                android:layout_width="110dp"
                android:layout_height="45dp"
                android:text="About"
                android:textSize="24dp"
                android:gravity="center"
                android:background="@drawable/roundedCorners"
                android:backgroundTint="@color/baseColor"
                android:fontFamily="@font/somatic_rounded"
                android:textColor="@color/textColor"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="83dp"
            android:layout_height="77dp"
            android:orientation="vertical"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="19dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UI/game programming"
            android:textSize="24dp"
            android:gravity="center"
            android:fontFamily="@font/somatic_rounded"
            android:textColor="@color/textColor"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mertwole"
            android:textSize="24dp"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:fontFamily="@font/somatic_rounded"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="24dp"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:fontFamily="@font/somatic_rounded"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UI/level design"
            android:textSize="24dp"
            android:gravity="center"
            android:fontFamily="@font/somatic_rounded"
            android:textColor="@color/textColor"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15Rubles"
            android:textSize="24dp"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:fontFamily="@font/somatic_rounded"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="24dp"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:fontFamily="@font/somatic_rounded"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="music/sfx"
            android:textSize="24dp"
            android:gravity="center"
            android:fontFamily="@font/somatic_rounded"
            android:textColor="@color/textColor"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alex Tompife"
            android:textSize="24dp"
            android:gravity="center"
            android:textColor="@color/textColor"
            android:fontFamily="@font/somatic_rounded"
        />
    </LinearLayout>
</LinearLayout>