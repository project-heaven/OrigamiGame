<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/no_hints"
    >

    <LinearLayout
        android:elevation="@dimen/elevation"
        android:outlineAmbientShadowColor="@color/baseAmbientShadowColor"
        android:outlineSpotShadowColor="@color/basePointShadowColor"
        android:layout_width="187dp"
        android:layout_height="142dp"
        android:orientation="vertical"
        android:background="@drawable/roundedCorners"
        android:backgroundTint="@color/baseColor">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No more hints"
            android:gravity="center"
            android:textColor="@color/thirdColor"
            android:fontFamily="@font/somatic_rounded"
            android:textSize="18dp"
            android:layout_marginVertical="15dp"
        />

        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <ImageButton
                android:id="@+id/show_ads"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:padding="12dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ads"
                android:tint="@color/iconColor"
                android:background="@drawable/roundedcorners"
                android:backgroundTint="@color/accentColor"
            />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>